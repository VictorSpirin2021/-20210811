{
  "name": "apiserver",
  "version": "1.0.0",
  "description": "",
  "main": "apiserver.js",
  "engines": {
    "node": ">=10.15.3"
  },
  "scripts": {
    "branding": "cd ../ccmpmonitor && npm run branding apiserver",
    "build": "gulp && npm run branding && tsc && eslint --max-warnings 0 \"src/**\"",
    "pretest": "gulp && tsc && eslint \"src/**\"",
    "test": "cross-env NODE_ENV=test nyc -r lcovonly -r html mocha --timeout 10000 -r ts-node/register --recursive --extension ts && nyc report",
    "test-int": "cross-env NODE_ENV=test nyc -r lcovonly -r html mocha --timeout 10000 -r ts-node/register test-int/**/*.test.ts --reporter mochawesome && nyc report",
    "unit-tests-only": "cross-env NODE_ENV=test mocha --timeout 30000 --reporter even-more-min -r ts-node/register --recursive --extension ts",
    "start": "gulp graphql && tsc && node ./dist/apiserver.js",
    "dev": "nodemon -e ts,json,graphql,json5 --watch src --watch config --exec \"npm start\"",
    "cloud": "nodemon -e ts,json,graphql,json5 --watch src --watch config --exec \"npm start -- --deployment cloud\"",
    "mock": "nodemon -e ts,json,graphql,json5 --watch src --watch config --exec \"npm start -- --mock\"",
    "debug": "gulp graphql && tsc --sourceMap true && node --nolazy --inspect-brk=9229 ./dist/apiserver.js",
    "buildAll": "cd ../ccmpmonitor && npm run cleanBuild && cd ../apiserver && npm run build",
    "requirements-check": "node check-version.js",
    "postinstall": "npm run requirements-check",
    "clean": "gulp clean"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ]
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "exclude": [
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts",
      ".js"
    ],
    "all": true
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "apollo-server": "2.14.0",
    "apollo-server-express": "2.14.0",
    "base64url": "^3.0.1",
    "convict": "^4.4.1",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "graphql": "14.6.0",
    "graphql-import": "^0.7.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.4",
    "http-status-codes": "^1.3.2",
    "inversify": "^5.0.1",
    "json5": "^1.0.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.8.0",
    "log4js": "^4.0.2",
    "node-cache": "^5.1.0",
    "node-fetch": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^3.3.2",
    "ws": "^6.2.1"
  },
  "devDependencies": {
    "@playlyfe/gql": "^2.6.1",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/convict": "^4.2.1",
    "@types/cookie-session": "^2.0.38",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/express-serve-static-core": "^4.17.7",
    "@types/faker": "^4.1.5",
    "@types/graphql": "^14.0.7",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/http-status-codes": "^1.2.0",
    "@types/json5": "0.0.30",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/log4js": "^2.3.5",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.12.11",
    "@types/node-fetch": "^2.3.2",
    "@types/sinon": "^7.0.10",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.0",
    "del": "^4.0.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-react": "^7.20.5",
    "even-more-min": "^1.0.1",
    "gulp": "^4.0.0",
    "gulp-cli": "^2.1.0",
    "mocha": "^6.1.4",
    "mochawesome": "^6.1.1",
    "nodemon": "^1.18.10",
    "nyc": "^14.1.1",
    "ramda": "^0.27.0",
    "semver": "^6.1.2",
    "sinon": "^7.2.7",
    "ts-node": "^8.0.3",
    "typescript": "^3.9.7"
  }
}
