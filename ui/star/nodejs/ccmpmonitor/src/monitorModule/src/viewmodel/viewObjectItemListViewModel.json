{
    "schemaVersion": "1.0.0",
    "imports": [
        "js/aw-include.directive",
        "js/aw-panel-body.directive",
        "js/aw-list.directive",
        "js/aw-command-panel.directive",
        "js/aw-command-panel-section.directive",
        "js/aw-panel-section.directive",
        "js/aw-scrollpanel.directive"
    ],
    "data": {
        "viewObjectNavigationPanelAnchor": "viewObjectNavigationPanelAnchor"
    },
    "dataProviders": {
        "plotsDataProvider": {
            "action": "loadPlotsData",
            "response": "{{data.results}}",
            "totalFound": "{{data.totalFound}}"
        },
        "scenesDataProvider": {
            "action": "loadScenesData",
            "response": "{{data.results}}",
            "totalFound": "{{data.totalFound}}"
        }
    },
    "actions": {
        "loadBatch": {
            "actionType": "batchJob",
            "steps": [ {
                    "action": "plotsDataProviderAction"
                },
                {
                    "action": "scenesDataProviderAction"
                },
                {
                    "action": "openViewObjectNavigationPanel"
                },
                {
                    "action": "showDefaultPlotAction"
                },
                {
                    "action": "navigateAwayOnRefreshAction"
                }
            ]
        },
        "navigateAwayOnRefreshAction": {
            "actionType": "JSFunctionAsync",
            "method": "navigateAwayOnRefresh",
            "inputData": {},
            "outputData": {},
            "deps": "js/monitorService"
        },
        "plotsDataProviderAction": {
            "actionType": "dataProvider",
            "method": "plotsDataProvider"
        },
        "scenesDataProviderAction": {
            "actionType": "dataProvider",
            "method": "scenesDataProvider"
        },
        "loadPlotsData": {
            "actionType": "JSFunctionAsync",
            "method": "getPlotsData",
            "inputData": {},
            "outputData": {
                "totalFound": "plots.length",
                "results": "plots"
            },
            "deps": "js/monitorService"
        },
        "loadScenesData": {
            "actionType": "JSFunctionAsync",
            "method": "getScenesData",
            "inputData": {},
            "outputData": {
                "totalFound": "scenes.length",
                "results": "scenes"
            },
            "deps": "js/monitorService"
        },
        "openViewObjectNavigationPanel": {
            "actionType": "Event",
            "method": "Event",
            "inputData": {
                "events": [ {
                    "name": "awsidenav.openClose",
                    "eventData": {
                        "id": "monitorView",
                        "commandId": "viewObjectNavigationPanelCommand"
                    }
                } ]
            }
        },
        "showPlot": {
            "actionType": "JSFunction",
            "method": "showPlotAction",
            "inputData": {
                "selection": "{{data.eventData}}"
            },
            "outputData": {},
            "deps": "js/monitorService"
        },
        "showScene": {
            "actionType": "JSFunction",
            "method": "showSceneAction",
            "inputData": {
                "selection": "{{data.eventData}}"
            },
            "outputData": {},
            "deps": "js/monitorService"
        },
        "showDefaultPlotAction": {
            "actionType": "JSFunction",
            "method": "showResidualsPlot",
            "inputData": {
                "plotsDataProvider": "{{data.dataProviders.plotsDataProvider}}"
            },
            "outputData": {},
            "deps": "js/monitorService"
        }
    },
    "i18n": {
        "viewObjectNavigationPanelHeader": [ "monitorModuleMessages" ]
    },
    "onEvent": [ {
            "eventId": "viewObjectItemList.contentLoaded",
            "action": "loadBatch"
        },
        {
            "eventId": "plotsDataProvider.selectionChangeEvent",
            "cacheEventData": true,
            "action": "showPlot"
        },
        {
            "eventId": "scenesDataProvider.selectionChangeEvent",
            "cacheEventData": true,
            "action": "showScene"
        }
    ]
}
