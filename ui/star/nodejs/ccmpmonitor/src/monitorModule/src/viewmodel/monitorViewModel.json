{
    "schemaVersion": "1.0.0",
    "imports": [
        "js/aw-include.directive",
        "js/aw-row.directive",
        "js/aw-column.directive",
        "js/aw-sidenav.directive",
        "js/exist-when.directive"
    ],
    "data": {
        "pageTitle": {
            "text": "{{i18n.pageTitle}}",
            "params": [ "{{ctx.state.params.simName}}" ]
        },
        "monitorSideNavData": {
            "slide": "PUSH",
            "direction": "LEFT_TO_RIGHT",
            "height": "FULL",
            "animation": true
        }
    },
    "i18n": {
        "pageTitle": [ "monitorModuleMessages" ],
        "ok": [ "monitorModuleMessages" ],
        "disconnectInfoMessage": [ "monitorModuleMessages" ],
        "connectingJob": [ "monitorModuleMessages" ]
    },
    "actions": {
        "onPageLoad": {
            "actionType": "JSFunction",
            "method": "onPageLoad",
            "inputData": {},
            "outputData": {},
            "deps": "js/monitorService"
        },
        "onPageUnload": {
            "actionType": "JSFunction",
            "method": "onPageUnload",
            "inputData": {},
            "outputData": {},
            "deps": "js/monitorService"
        },
        "navigateToJobsAction": {
            "actionType": "Navigate",
            "navigateTo": "jobs",
            "navigationParams": {}
        },
        "idleWarningAction": {
            "actionType": "JSFunction",
            "method": "showPopup",
            "inputData": {
                "popupId": "idleWarningPopup"
            },
            "outputData": {},
            "deps": "js/popupService"
        },
        "showInfoMessageAction": {
            "actionType": "Event",
            "method": "Event",
            "inputData": {
                "events": [
                    {
                        "name": "infoForDisconnectionCommand"
                    }
                ]
            },
            "events": {
                "success": [ {
                    "name": "awPopup.close",
                    "eventData": {
                        "popupId": "idleWarningPopup"
                    }
                } ]
            }
        }
    },
    "messages": {
        "infoForDisconnectionMessage": {
            "messageType": "INFO",
            "messageText": "{{i18n.disconnectInfoMessage}}",
            "navigationOptions": [
                {
                    "option": "ok",
                    "text": "{{i18n.ok}}"
                }
            ]
        }
    },
    "onEvent": [ {
            "eventId": "monitor.contentLoaded",
            "action": "onPageLoad"
        },
        {
            "eventId": "monitor.contentUnloaded",
            "action": "onPageUnload"
        },
        {
            "eventId": "navigateToJobsPage",
            "action": "navigateToJobsAction"
        },
        {
            "eventId": "informUserAboutIdleStatus",
            "action": "idleWarningAction"
        },
        {
            "eventId": "showInfoMessage",
            "action": "showInfoMessageAction"
        },
        {
            "eventId": "infoForDisconnectionCommand",
            "message": "infoForDisconnectionMessage"
        }
    ]
}
